@model IEnumerable<ExpertransDaoTao.Models.Students>
@{
    ViewData["Title"] = "Học Viên - Trang Chủ";
    Layout = "_LayoutStudent";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông Tin Học Viên</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">Học Viên</li>
                    <li class="breadcrumb-item active">Trang Chủ</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/avatar-default.png"
                                 alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center">@Model.FirstOrDefault().UserName</h3>

                        <p class="text-muted text-center">@Model.FirstOrDefault().Name</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Ngày Sinh</b> <a class="float-right">@Model.FirstOrDefault().DateOfBirth.GetValueOrDefault(DateTime.Now).ToString("dd - MM - yyyy")</a>
                            </li>
                            <li class="list-group-item">
                                <b>Giới tính</b>
                                @if (Model.FirstOrDefault().Gender.Value == true)
                                {<a class="float-right">
                                        Nam
                                    </a>

                                }
                                else
                                { <a class="float-right">
                                        Nữ
                                    </a>}
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Chi Tiết</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-id-card"></i> Số Căn Cước công dân</strong>
                        <p class="text-muted">
                            @Model.FirstOrDefault().Identity
                        </p>
                        <hr>
                        <strong><i class="fas fa-envelope"></i> Email</strong>

                        <p class="text-muted">
                            @Model.FirstOrDefault().Email
                        </p>
                        <hr>
                        <strong><i class="fas fa-mobile"></i> Số Điện Thoại</strong>

                        <p class="text-muted">
                            @Model.FirstOrDefault().Mobile
                        </p>
                        <hr>
                        <strong><i class="fas fa-address-book"></i> Địa chỉ</strong>

                        <p class="text-muted">
                            @Model.FirstOrDefault().Address
                        </p>
                        <hr>
                        <strong><i class="fas fa-calendar"></i> Ngày bắt đầu</strong>

                        <p class="text-muted">
                            @Model.FirstOrDefault().BeginDate.GetValueOrDefault(DateTime.Now).ToString("dd - MM - yyyy")
                        </p>
                        <hr>
                        <strong><i class="fas fa-user-graduate"></i> Trình Độ</strong>
                        @if (Model.FirstOrDefault().LevelId.Value == 1)
                        {
                            <p class="text-muted">
                                Trung Học Phổ Thông

                            </p>
                        }
                        else if (Model.FirstOrDefault().LevelId.Value == 2)
                        {
                            <p class="text-muted">
                                Trung Cấp

                            </p>

                        }
                        else if (Model.FirstOrDefault().LevelId.Value == 3)
                        {
                            <p class="text-muted">
                                Cao Đẳng, Đại Học

                            </p>
                        }
                        <hr>
                        <strong><i class="fas fa-user-graduate"></i> Nhóm Học Viên</strong>
                        <p class="text-muted">
                            @Model.FirstOrDefault().GroupStudentId.Value.ToString()
                        </p>
                        <hr>
                        
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
